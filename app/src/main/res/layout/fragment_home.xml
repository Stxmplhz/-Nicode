<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44C8BD"
    tools:context=".BottomFragment.HomeFragment">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_54sdp"
        android:background="#44C8BD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="@dimen/_64sdp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_12sdp"
            android:gravity="center"
            android:text="HOME"
            android:textColor="#2F5C66"
            android:textSize="@dimen/_28ssp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/bluetoothzone"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_135sdp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/bluetoothsection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Homeevent_slider" />

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/Homeevent_slider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="#70F0D9"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="right"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="#2F5C66"
        app:sliderIndicatorUnselectedColor="#FFF"
        app:sliderScrollTimeInSec="2"
        app:sliderStartAutoCycle="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="@dimen/_108sdp"
        android:layout_height="@dimen/_108sdp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/calendaricon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bluetoothzone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="เหลืออีก"
        android:textColor="#3A3E61"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <TextView
        android:id="@+id/text_dayleft"
        android:layout_width="@dimen/_64sdp"
        android:layout_height="@dimen/_72sdp"
        android:gravity="center"
        android:text="31"
        android:textColor="#3A3E61"
        android:textSize="@dimen/_48ssp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="วัน"
        android:textColor="#3A3E61"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6" />

    <CheckBox
        android:id="@+id/check1"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:buttonTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/check2" />

    <TextView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="8dp"
        android:gravity="start"
        android:text="งดสูบบุหรี่"
        android:textColor="#3A3E61"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="@+id/check3"
        app:layout_constraintStart_toEndOf="@+id/check3"
        app:layout_constraintTop_toTopOf="@+id/check3"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="8dp"
        android:gravity="start"
        android:text="หาสิ่งจูงใจยึดเหนี่ยว"
        android:textColor="#3A3E61"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="@+id/check2"
        app:layout_constraintStart_toEndOf="@+id/check2"
        app:layout_constraintTop_toTopOf="@+id/check2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="8dp"
        android:gravity="start"
        android:text="ยับยั้งใจตนเองให้ดีที่สุดเพื่อเป้าหมาย"
        android:textColor="#3A3E61"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="@+id/check1"
        app:layout_constraintStart_toEndOf="@+id/check1"
        app:layout_constraintTop_toTopOf="@+id/check1"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/check2"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="8dp"
        android:buttonTint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <CheckBox
        android:id="@+id/check3"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:buttonTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/check2"
        app:layout_constraintStart_toEndOf="@+id/imageView6" />

    <ImageView
        android:id="@+id/nicostatus_bar"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/nicocoinstatus_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nicocoin_Inbar"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        android:textColor="#226E8A"
        android:textSize="@dimen/_18ssp"
        app:layout_constraintBottom_toBottomOf="@+id/nicostatus_bar"
        app:layout_constraintEnd_toEndOf="@+id/nicostatus_bar"
        app:layout_constraintTop_toTopOf="@+id/nicostatus_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>
