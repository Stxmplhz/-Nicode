<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#70DED7"
    tools:context=".BottomFragment.CommunityFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:background="#44C8BD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="159dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="COMMUNITY"
            android:textColor="#2F5C66"
            android:textSize="@dimen/_28ssp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_480sdp"
        android:src="@drawable/tabforback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/communityevent_slider" />

    <ImageView
        android:id="@+id/texthealthylifr"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:src="@drawable/texthealthylife"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/communityevent_slider" />


    <ImageView
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:src="@drawable/moreicon"
        app:layout_constraintStart_toEndOf="@+id/texthealthylifr"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <EditText
        android:id="@+id/imageView22"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/search_bar_community"
        android:hint="ค้นหาที่นี่"
        android:paddingLeft="@dimen/_28sdp"
        android:textColor="#9CC3BA"
        android:textColorHint="#9CC3BA"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/grouplistbutton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/grouplist_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/communityevent_slider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="#70F0D9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="right"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="#2F5C66"
        app:sliderIndicatorUnselectedColor="#FFF"
        app:sliderScrollTimeInSec="2"
        app:sliderStartAutoCycle="true" />


    <ImageView
        android:id="@+id/essay1"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/community2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:text="สูบบุหรี่เสี่ยงติดโควิด"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="@+id/essay1"
        app:layout_constraintStart_toStartOf="@+id/essay1" />

    <ImageView
        android:id="@+id/essay2"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/community4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:text="การออกกำลังกายวิถีใหม่"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="@+id/essay2"
        app:layout_constraintStart_toStartOf="@+id/essay2" />

    <ImageView
        android:id="@+id/essay3"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/community3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/essay1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:text="สูบบุหรี่ในบ้าน ผลร้ายสู่คนใกล้ชิด"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="@+id/essay3"
        app:layout_constraintStart_toStartOf="@+id/essay3" />

    <ImageView
        android:id="@+id/essay4"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/community1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/essay2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:text="โทษของบุหรี่ ยิ่งสูบยิ่งป่วย"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="@+id/essay4"
        app:layout_constraintStart_toStartOf="@+id/essay4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:text="บทความจาก สสส. สำนักงานกองทุนสนับสนุนการสร้างเสริมสุขภาพ"
        android:textColor="#2F5C66"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/essay4" />

</androidx.constraintlayout.widget.ConstraintLayout>
